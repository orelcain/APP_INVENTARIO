                           "**/node_modules":  true,
                           "**/.qodo":  true,
                           "**/INVENTARIO_STORAGE/logs/**":  true,
                           "**/INVENTARIO_STORAGE/backups_marcadores/**":  true,
                           "**/INVENTARIO_STORAGE/backups/**":  true
                       },
